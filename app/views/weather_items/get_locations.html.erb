<h1>Search Results </h1>
<span id="links">
  <%= link_to "Back to search", weather_items_path %>
</span>
  
<div id="container">
  <div id="lh">
    <table cellpadding=0 cellspacing=0>
      <tr>
        <td>
          <h2>Current Conditions </h2>
        </td>
      </tr>
        <%  @doc.find('//aws:weather/aws:stations/aws:station').each do |station| %>
          <tr><td class="blue_table">
          <b><%= station["name"] %>:</b>&nbsp;
          <% live_weather = WeatherItem.get_live_weather(station["id"]) %>
          <%= live_weather.title %><br/><br/>
          <% live_weather.entries.each do |entry| %>
            <%= sanitize(entry.summary) %>
          <% end %>
          <br/><br/>
          </td></tr>
        <% end %>
    </table>
  </div>
  <div id="rh">
    <table>
      <tr>
        <td>
          <h2>7-Day Forecast</h2>
        </td>
      </tr>
      <% @forecast.entries.each do |entry| %>
        <tr>
          <td>
            <%= entry.title %><br/>
            <%= sanitize(entry.summary) %>
            <br/><br/>
          </td>
        </tr>
        <% end %>
    </table>
  </div>
</div>
    
      
      
